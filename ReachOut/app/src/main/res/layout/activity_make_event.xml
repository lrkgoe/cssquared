<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MakeEventActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="14pt"
        android:textAlignment="center"
        android:fontFamily="Helvetica"
        android:text="Make Event"
        android:id="@+id/title_textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:hint="Name of Event"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="12"
        android:id="@+id/name_editText"
        android:autoText="false"
        android:layout_below="@+id/title_textView"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:hint="Street #"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="4"
        android:id="@+id/street_number_editText"
        android:autoText="false"
        android:layout_alignTop="@+id/house_address_editText"
        android:layout_toStartOf="@+id/house_address_editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="House Address"
        android:ems="8"
        android:id="@+id/house_address_editText"
        android:layout_below="@+id/name_editText"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@+id/email_editText" />

    <EditText
        android:layout_width="wrap_content"
        android:hint="Email (optional)"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="8"
        android:id="@+id/email_editText"
        android:autoText="false"
        android:layout_alignTop="@+id/zip_code_editText"
        android:layout_toEndOf="@+id/zip_code_editText" />

    <EditText
        android:layout_width="wrap_content"
        android:hint="Zip Code"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="4"
        android:id="@+id/zip_code_editText"
        android:autoText="false"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/street_number_editText"
        android:layout_alignStart="@+id/summary_editText" />

    <EditText
        android:layout_width="wrap_content"
        android:hint="Phone Number"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="12"
        android:id="@+id/phone_number_editText"
        android:autoText="false"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/zip_code_editText"
        android:layout_alignStart="@+id/summary_editText" />


    <EditText
        android:layout_width="wrap_content"
        android:hint="Summary"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="12"
        android:id="@+id/summary_editText"
        android:layout_below="@+id/phone_number_editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
    />

    <EditText
        android:layout_width="wrap_content"
        android:hint="Date"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="6"
        android:id="@+id/date_editText"
        android:layout_below="@+id/summary_editText"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/summary_editText"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:hint="Time"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="6"
        android:id="@+id/time_editText"
        android:layout_alignTop="@+id/date_editText"
        android:layout_toEndOf="@+id/date_editText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Event"
        android:id="@+id/createEvent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/time_editText"
        android:layout_alignEnd="@+id/time_editText"
        android:layout_marginTop="15dp"
        />


</RelativeLayout>
